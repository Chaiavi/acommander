<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="org.chaiware.acommander.Commander">
<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="900.0" styleClass="commander-root">
    <center>
        <GridPane hgap="2" styleClass="panes-grid" vgap="2">
            <columnConstraints>
                <ColumnConstraints percentWidth="50.0" />
                <ColumnConstraints percentWidth="50.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="35.0" vgrow="NEVER" />
                <RowConstraints minHeight="25.0" vgrow="NEVER" />
                <RowConstraints minHeight="200.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="22.0" vgrow="NEVER" />
            </rowConstraints>

            <!-- Drive/Path ComboBoxes -->
            <ComboBox fx:id="leftPathComboBox" editable="true" maxWidth="Infinity" prefHeight="30.0" styleClass="path-combo" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
                <GridPane.margin>
                    <Insets left="3.0" right="1.0" top="3.0" />
                </GridPane.margin>
            </ComboBox>

            <ComboBox fx:id="rightPathComboBox" editable="true" maxWidth="Infinity" prefHeight="30.0" styleClass="path-combo" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
                <GridPane.margin>
                    <Insets left="1.0" right="3.0" top="3.0" />
                </GridPane.margin>
            </ComboBox>

            <!-- Column headers -->
            <HBox fx:id="leftHeaderBox" alignment="CENTER_LEFT" spacing="8.0" styleClass="pane-header" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="3.0" right="1.0" />
                </GridPane.margin>
                <Region fx:id="leftIconHeaderSpacer" minWidth="36.0" prefWidth="36.0" />
                <Label fx:id="leftNameHeader" alignment="CENTER_LEFT" styleClass="pane-header-label" text="Name" HBox.hgrow="ALWAYS" />
                <Label fx:id="leftSizeHeader" alignment="CENTER_RIGHT" prefWidth="100.0" styleClass="pane-header-label" text="Size" />
                <Label fx:id="leftModifiedHeader" alignment="CENTER_RIGHT" prefWidth="120.0" styleClass="pane-header-label" text="Modified" />
            </HBox>

            <HBox fx:id="rightHeaderBox" alignment="CENTER_LEFT" spacing="8.0" styleClass="pane-header" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="1.0" right="3.0" />
                </GridPane.margin>
                <Region fx:id="rightIconHeaderSpacer" minWidth="36.0" prefWidth="36.0" />
                <Label fx:id="rightNameHeader" alignment="CENTER_LEFT" styleClass="pane-header-label" text="Name" HBox.hgrow="ALWAYS" />
                <Label fx:id="rightSizeHeader" alignment="CENTER_RIGHT" prefWidth="100.0" styleClass="pane-header-label" text="Size" />
                <Label fx:id="rightModifiedHeader" alignment="CENTER_RIGHT" prefWidth="120.0" styleClass="pane-header-label" text="Modified" />
            </HBox>

            <!-- File Lists -->
            <ListView fx:id="leftFileList" prefHeight="200.0" styleClass="file-pane" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets bottom="1.0" left="3.0" right="1.0" />
                </GridPane.margin>
            </ListView>

            <ListView fx:id="rightFileList" prefHeight="200.0" styleClass="file-pane" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets bottom="1.0" left="1.0" right="3.0" />
                </GridPane.margin>
            </ListView>

            <Label fx:id="leftPaneSummaryLabel" styleClass="pane-summary-label" text="" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets bottom="2.0" left="5.0" right="1.0" />
                </GridPane.margin>
            </Label>

            <Label fx:id="rightPaneSummaryLabel" styleClass="pane-summary-label" text="" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets bottom="2.0" left="3.0" right="5.0" />
                </GridPane.margin>
            </Label>
        </GridPane>
    </center>

    <bottom>
        <!-- Function keys bar -->
        <VBox styleClass="function-bar-shell">
            <HBox fx:id="externalProgressBox" alignment="CENTER_LEFT" managed="false" spacing="8.0" styleClass="external-progress-row" visible="false">
                <HBox.margin>
                    <Insets bottom="2.0" left="8.0" right="8.0" top="4.0" />
                </HBox.margin>
                <Label fx:id="externalProgressLabel" styleClass="external-progress-label" text="Running external command..." />
                <ProgressBar fx:id="externalProgressBar" maxWidth="Infinity" progress="-1.0" HBox.hgrow="ALWAYS" styleClass="external-progress-bar" />
                <Button fx:id="externalStopButton" onAction="#stopExternalTasks" styleClass="external-stop-button" text="Stop" />
            </HBox>
            <HBox fx:id="functionBar" alignment="CENTER" prefHeight="40.0" spacing="1" styleClass="function-bar-row">
                <Button fx:id="btnF1" maxWidth="Infinity" onAction="#help" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF2" maxWidth="Infinity" onAction="#renameFile" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF3" maxWidth="Infinity" onAction="#viewFile" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF4" maxWidth="Infinity" onAction="#editFile" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF5" maxWidth="Infinity" onAction="#handleF5Button" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF6" maxWidth="Infinity" onAction="#moveFile" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF7" maxWidth="Infinity" onAction="#makeDirectory" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF8" maxWidth="Infinity" onAction="#deleteFile" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF9" maxWidth="Infinity" onAction="#terminalHere" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF10" maxWidth="Infinity" onAction="#handleF10Button" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF11" maxWidth="Infinity" onAction="#pack" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin></Button>
                <Button fx:id="btnF12" maxWidth="Infinity" onAction="#unpackFile" prefHeight="32.0" styleClass="function-button" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </HBox.margin></Button>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
    <StackPane alignment="TOP_CENTER" pickOnBounds="false" styleClass="palette-host">
        <fx:include fx:id="commandPalette" source="CommandPalette.fxml" />
    </StackPane>
</StackPane>
