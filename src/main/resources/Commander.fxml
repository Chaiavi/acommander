<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.chaiware.acommander4j.Commander">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem onAction="#exitApp" text="Exit" />
                </Menu>
                <Menu text="Help">
                    <MenuItem onAction="#showAbout" text="About" />
                </Menu>
            </MenuBar>
            <BorderPane.margin>
                <Insets bottom="5.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <GridPane hgap="10" prefWidth="Infinity" vgap="5">
            <columnConstraints>
                <ColumnConstraints percentWidth="50.0" />
                <ColumnConstraints percentWidth="50.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="NEVER" />
            </rowConstraints>

            <!-- ComboBoxes -->
            <ComboBox fx:id="leftPathComboBox" editable="true" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" />
                </GridPane.margin>
            </ComboBox>

            <ComboBox fx:id="rightPathComboBox" editable="true" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
            <GridPane.margin>
               <Insets left="5.0" right="5.0" />
            </GridPane.margin></ComboBox>



            <!-- File Lists -->
            <ListView fx:id="leftFileList" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ListView fx:id="rightFileList" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!--            percentWidth="100 / number of buttons" (7 buttons â†’ ~14.28% each).-->
            <GridPane GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                <columnConstraints>
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                    <ColumnConstraints percentWidth="14.2857" />
                </columnConstraints>
                <Button maxWidth="Infinity" onAction="#viewFile" text="F3 View" GridPane.columnIndex="0">
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin></Button>
                <Button maxWidth="Infinity" onAction="#editFile" text="F4 Edit" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin></Button>
                <Button maxWidth="Infinity" onAction="#copyFile" text="F5 Copy" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin></Button>
                <Button maxWidth="Infinity" onAction="#moveFile" text="F6 Move" GridPane.columnIndex="3">
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin></Button>
                <Button maxWidth="Infinity" onAction="#makeDirectory" text="F7 MkDir" GridPane.columnIndex="4">
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin></Button>
                <Button maxWidth="Infinity" onAction="#deleteFile" text="F8 Delete" GridPane.columnIndex="5">
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin></Button>
                <Button maxWidth="Infinity" onAction="#exitApp" text="F10 Exit" GridPane.columnIndex="6">
               <GridPane.margin>
                  <Insets left="5.0" right="5.0" />
               </GridPane.margin></Button>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
            <GridPane.margin>
               <Insets bottom="5.0" />
            </GridPane.margin>
            </GridPane>

            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </GridPane>
    </center>
</BorderPane>
